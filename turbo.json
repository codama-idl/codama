{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["NODE_ENV"],
    "remoteCache": {
        "signature": true
    },
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["build"]
        },
        "test:browser": {
            "dependsOn": ["^build"]
        },
        "test:node": {
            "dependsOn": ["^build"]
        },
        "test:react-native": {
            "dependsOn": ["^build"]
        },
        "test:treeshakability": {
            "dependsOn": ["build"]
        },
        "test:types": {},
        "lint": {},
        "lint:fix": {}
    }
}
