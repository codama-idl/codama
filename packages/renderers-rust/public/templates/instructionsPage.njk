{{ dataTraits }} pub struct {{ instruction.name | pascalCase }}InstructionArgs {
  {% for arg in instructionArgs %}
    {% if not arg.default %}
      pub {{ arg.name | snakeCase }}: {{ arg.type }},
    {% endif %}
  {% endfor %}
}
{% endif %}

