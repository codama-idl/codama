        "@types/node": "^25",
        "agadoo": "^3.0.0",
        "browserslist-to-esbuild": "^2.1.1",
        "eslint": "^9.39.2",
        "happy-dom": "^20.0.11",
        "prettier": "^3.7.4",
        "rimraf": "6.1.2",
        "tsup": "^8.5.1",
        "turbo": "^2.7.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    },
    "engines": {
        "node": ">=20.18.0"
    },
    "packageManager": "pnpm@10.15.1",
    "prettier": "@solana/prettier-config-solana"
